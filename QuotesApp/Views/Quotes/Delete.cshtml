@model QuotesApp.Models.DeletionViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this quote?</h3>
<div>
    <h4>Quote</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quote.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quote.Author)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quote.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quote.Content)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quote.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quote.Date)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="text" asp-for="Passcode" />
        @{ if (Model.Error != "")
            {
                <p class="error" style="color: red;">@Model.Error</p>
            }
        }
        <input type="submit" value="Delete" />
        <a asp-action="Index">Back to List</a>
    </form>
</div>
